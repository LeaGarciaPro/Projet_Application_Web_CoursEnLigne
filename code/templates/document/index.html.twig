{% extends 'BaseEnseignant.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h2>Liste des documents disponibles :</h2>
    
    <table class="table">
        <thead>
        <tr>
            <th>Nom du document</th>
            <th>Niveau</th>
            <th>Filière</th>
            <th>Matière</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.name}}</td>
                <td>{{ document.matiere.niveau.nom|default('') }}</td>
                <td>{{ document.matiere.niveauFiliere.nom|default('') }}</td>
                <td>{{ document.matiere.nom|default('') }}</td>
                <td>
                    <a href="{{ path('document_show', {'id': document.id}) }}" class="btn btn-scool btn-circle"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('document_edit', {'id': document.id}) }}" class="btn btn-scool btn-circle"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun contenu trouvé pour cette matière</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-scool" href="{{ path('document_new') }}">Créer un nouveau cours</a>

{% endblock %}
