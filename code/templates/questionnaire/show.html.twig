{% extends 'BaseEnseignant2.html.twig' %}
{% block title %}Questionnaire{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            
            <li class="breadcrumb-item "><a class="scool-color" href="{{ path('questionnaire_index') }}"> &lt; back to
                    list </a></li>
        
        </ol>
    </nav>
    <h1>Questionnaire</h1>
    
    <table class="ui very basic collapsing celled table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ questionnaire.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ questionnaire.Titre }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ questionnaire.Description }}</td>
        </tr>
        <tr>
            <th>questions</th>
            <td>
                {% for question in questionnaire.questions %}
                    {{ question.question }}
                    <br>
                    suggestion :
                    {% set suggestions = question.suggestion|split(',') %}
                    {% for  suggestion in suggestions %}
                        <div class="box bg-white">
                            <div class="row">
                                <div class="col-lg-8 col-md-7 col-12">
                                    <div class="d-flex align-items-center">
                                        <span class="fas fa-angle-right"></span>
                                        <b class="px-2">{{ suggestion }}</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <hr class="divider">
                
                {% endfor %}
            </td>
        </tr>
        
        
        </tbody>
    </table>
    
    <div class="ui inverted divider"></div>
    
    
    <a class="btn btn-scool float-right" href="{{ path('questionnaire_edit', {'id': questionnaire.id}) }}">edit</a>
    
    {{ include('questionnaire/_delete_form.html.twig') }}
{% endblock %}
