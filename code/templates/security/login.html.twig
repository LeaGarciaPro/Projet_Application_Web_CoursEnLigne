{% extends 'BaseInscriptionConnexion.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="row" style="margin-top: 0%;">
            <div class="col-lg-4 offset-4">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Se connecter</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
                   autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class="row mx-auto" style="margin-top: 3%">
            <div class="col-lg-4 offset-5">
                {% if app.user %}
                    <button class="btn btn-scool" id="bouton"><a style="text-decoration: none; color:#009283;" href="{{ path('app_logout') }}">{{ button_label|default('DÃ©connexion') }}</a></button>
                {% endif %}
                <button class="btn btn-scool" type="submit">
                Connexion
                </button>
            </div>
        </div>
    </form>

    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}
{% endblock %}
