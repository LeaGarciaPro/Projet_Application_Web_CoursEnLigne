{% extends 'BaseEtudiantException.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    {% if matieres|length  == 1 %}

        <div class="row" id="barreMatiere" style="background-color: #009283; min-height: 100px; margin-top:1%;">
        <div class="col-lg-12">
            <h2 id="titreMatiere">{{matieres|first.nom}}</h2>
        </div>
        </div>

        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <div class="container" style="margin-top: -2%;">
            <div class="row">
                <div class="col-md-4 col-xl-3">
                    <a style="color:white; text-decoration: none;" href="{{ path('pdf_list',{'idMatiere': matieres|first.id}) }}">
                        <div class="card bg-c-color order-card"  style="opacity: 0.2;">
                        <div class="card-block">
                            <h4 style="text-align:center; margin-top:40%; ">PDF</h4>
                        </div>

                    </div>
                    </a>
                </div>

                <div class="col-md-4 col-xl-3">
                    <a style="color:white; text-decoration: none;" href="{{ path('video_list',{'idMatiere': matieres|first.id}) }}">
                    <div class="card bg-c-color order-card" style="opacity: 0.4;">
                        <div class="card-block">
                            <h4 style="text-align:center; margin-top:40%; ">Vidéos</h4>
                        </div>
                    </div>
                    </a>
                </div>

                <div class="col-md-4 col-xl-3">
                    <a style="color:white; text-decoration: none;" href="{{ path('document_list',{'idMatiere': matieres|first.id}) }}">
                    <div class="card bg-c-color order-card" style="opacity: 0.6;">
                        <div class="card-block">
                            <h4 style="text-align:center; margin-top:40%; ">Cours</h4>
                        </div>
                    </div>
                    </a>
                </div>

                <div class="col-md-4 col-xl-3">
                    <a style="color:white; text-decoration: none;" href="{{ path('questionnaire_list',{'idMatiere': matieres|first.id}) }}">
                    <div class="card bg-c-color order-card" style="opacity: 0.8;">
                        <div class="card-block">
                            <h4 style="text-align:center; margin-top:40%; ">Quizz</h4>
                        </div>
                    </div>
                    </a>
                </div>
            </div>
        </div>


    {% else %}

        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

        <div class="row" id="barreMatiere2" style="background-color: #009283; min-height: 100px; margin-top:1%;">
            <div class="col-lg-12">
                <h2 id="titreMatiere">Mes matières</h2>
            </div>
        </div>

        <div class="row d-flex justify-content-center" style="margin-top: -3%;">
        {% for matiere in matieres %}
                <div class="col-lg-2">
                    <a style="color:white; text-decoration: none;" href="{{ path('CompteEtudiantMatiere',{'idMatiere':matiere.id}) }}">
                        <div class="card bg-c-color order-card" style="opacity: 0.7;">
                            <div class="card-block">
                                <h4 style="text-align:center; margin-top:40%; ">{{matiere.nom}}</h4>
                            </div>
                        </div>
                    </a>
                </div>
        {% endfor %}
        </div>
    {% endif %}

{% endblock body %}